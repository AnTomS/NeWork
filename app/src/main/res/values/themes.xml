    <style name="Theme.NeWork" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_button</item>
        <item name="colorPrimaryVariant">@color/purple_container</item>
        <item name="colorOnPrimary">@color/black</item>
        <item name="colorPrimaryContainer">@color/dark_green</item>
        <item name="colorOnPrimaryContainer">@color/red</item>
        <item name="colorPrimaryInverse">@color/black</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/purple_button</item>
        <item name="colorSecondaryVariant">@color/secondary_500</item>
        <item name="colorOnSecondary">@color/primaryLightColor</item>
        <item name="colorSecondaryContainer">@color/black</item>
        <!-- Tertiary brand color. -->
        <item name="colorTertiary">@color/red_200</item>
        <item name="colorOnTertiary">@color/red_700</item>
        <item name="colorTertiaryContainer">@color/red</item>
        <item name="colorOnTertiaryContainer">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>

        <item name="colorSurface">@color/purple_fon</item>
        <!-- Customize your theme here. -->
    </style>


    // работающая тема для день ночь ботом навигации

    <style name="bottomNavigationStyle" parent="Widget.MaterialComponents.BottomNavigationView.PrimarySurface">
        <item name="colorPrimary">@color/white</item>
        <item name="colorSurface">@color/white</item>
        <item name="colorOnSurface">@color/white</item>
        <item name="colorOnPrimary">@color/black</item>

    </style>




